{% extends 'admin.html.twig' %}

{% block title %}üì¶ D√©tails de la Commande{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Container Styling */
        .commande-container {
            max-width: 800px;
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin: auto;
        }

        .commande-title {
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
            color: #babdc2;
        }

        /* Table Styling */
        .table {
            width: 100%;
            background: #f8f9fa;
            border-radius: 10px;
            overflow: hidden;
        }

        .table th {
            background: #9ba5af;
            color: white;
            padding: 12px;
            text-align: left;
        }

        .table td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        /* Action Buttons */
        .btn-container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .btn-action {
            padding: 10px 15px;
            border-radius: 6px;
            font-weight: bold;
            text-decoration: none;
            transition: 0.3s;
        }

        .btn-back {
            background: #6c757d;
            color: white;
        }

        .btn-back:hover {
            background: #545b62;
        }

        .btn-edit {
            background: #ffc107;
            color: white;
        }

        .btn-edit:hover {
            background: #e0a800;
        }

        .btn-delete {
            background: #dc3545;
            color: white;
        }

        .btn-delete:hover {
            background: #c82333;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="commande-container">
